@model IEnumerable<PhoneMax_1._1.Models.ProductDetails>
@{
    ViewData["Title"] = "GalaxyNote";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="card-wrapper">
    <div class="card">
        <!-- card left -->
        <div class="product-imgs">
            <div class="img-display">
                <div class="img-showcase">
                    <img src="https://m.media-amazon.com/images/I/81+Zx6troaL._SL1500_.jpg" alt="phone image">
                    <img src="https://m.media-amazon.com/images/I/810PIWlXNvL._SL1500_.jpg" alt="phone image">
                    <img src="https://m.media-amazon.com/images/I/61-2BSZomTL._SL1500_.jpg" alt="phone image">
                    <img src="https://m.media-amazon.com/images/I/71wmyYEhiOL._SL1500_.jpg" alt="phone image">
                </div>
            </div>
            <div class="img-select">
                <div class="img-item">
                    <a href="#" data-id="1">
                        <img src="https://m.media-amazon.com/images/I/81+Zx6troaL._SL1500_.jpg" alt="phone image">
                    </a>
                </div>
                <div class="img-item">
                    <a href="#" data-id="2">
                        <img src="https://m.media-amazon.com/images/I/810PIWlXNvL._SL1500_.jpg" alt="phone image">
                    </a>
                </div>
                <div class="img-item">
                    <a href="#" data-id="3">
                        <img src="https://m.media-amazon.com/images/I/61-2BSZomTL._SL1500_.jpg" alt="phone image">
                    </a>
                </div>
                <div class="img-item">
                    <a href="#" data-id="4">
                        <img src="https://m.media-amazon.com/images/I/71wmyYEhiOL._SL1500_.jpg" alt="phone image">
                    </a>
                </div>
            </div>
        </div>
        @foreach (var item in Model)
        {
            <!-- card right -->
            <div class="product-content">
                <h2 class="product-title">
                    @Html.DisplayFor(modelItem => item.Product_Name)
                </h2>
                <!--<a href = "#" class = "product-link">visit samsung store</a>-->
                <div class="product-rating">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <span>4.2(33)</span>
                </div>

                <div class="product-price">
                   
                    <p class="new-price"> Price: <span> @Html.DisplayFor(modelItem => item.Price)</span></p>
                </div>

                <div class="product-detail">
                    <h2>about this item: </h2>
                    <p>
                        @Html.DisplayFor(modelItem => item.Description)
                    </p>
                    @*<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Illo eveniet veniam tempora fuga tenetur placeat sapiente architecto illum soluta consequuntur, aspernatur quidem at sequi ipsa!</p>
                    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Consequatur, perferendis eius. Dignissimos, labore suscipit. Unde.</p>*@
                   
                </div>

                <div class="purchase-info">
                    <input type="number" min="0" value="1">
                    @using (Html.BeginForm("CartPage", "Home", new { Id = item.Product_Id }, FormMethod.Post))
                    {
                <button>
                    Add to Cart 
                </button>

                    }
                    
                    <!--<button type = "button" class = "btn">Compare</button>-->
                </div>

                <div class="social-links">
                    <p>Share At: </p>
                    <a href="#">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a href="#">
                        <i class="fab fa-whatsapp"></i>
                    </a>
                    <a href="#">
                        <i class="fab fa-pinterest"></i>
                    </a>
                </div>
            </div>
        }
        </div>
</div>




