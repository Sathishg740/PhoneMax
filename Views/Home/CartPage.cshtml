@model IEnumerable<PhoneMax_1._1.Models.ProductDetails>
@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PhoneMax - Cart</title>
    <link href="assets/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link rel="stylesheet" href="font-awesome-4.7.0/css/font-awesome.min.css">
    <link href="~/css/Cart.css" rel="stylesheet">
</head>
<body>

    <div class="container mt-5 p-3 rounded cart">
        @foreach (var item in Model)
        {
            <div class="row no-gutters">
                <div class="col-md-12 col-md-6">
                    <div class="product-details mr-2">
                        <div class="d-flex flex-row align-items-center"><i class="fa fa-arrow-left"> </i></div>
                    </div><span class="ml-2">Continue Shopping</span>
                </div>
                <hr>
                <h6 class="mb-0">Shopping cart</h6><br />



                <div class="d-flex justify-content-between align-items-center mt-3 p-2 items rounded">
                    <div class="d-flex flex-row">
                        <img class="rounded" src="https://rukminim1.flixcart.com/image/416/416/ktketu80/mobile/6/v/c/iphone-13-pro-max-mllh3hn-a-apple-original-imag6vpgpycue85h.jpeg?q=70" width="40" height="200">
                        <div class="ml-2" style="margin-left: 20px;"><span class="font-weight-bold d-block"> @Html.DisplayFor(modelItem => item.Product_Name)</span></div>
                    </div>
                    <div class="d-flex flex-row align-items-center"><span class="d-block ml-5 font-weight-bold" style="padding-right: 20px;">Price: @Html.DisplayFor(modelItem => item.Price)</span><i class="fa fa-trash-o ml-3 text-black-50"> @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })</i></div>
                </div>


            </div>
            <hr class="line">
            <div class="d-flex justify-content-between information"><span>Total Price(Incl. taxes)</span> <span>@Html.DisplayFor(modelItem => item.Price)</span></div><button class="btn btn-primary btn-block d-flex justify-content-between mt-3" type="submit"><a href="/Home/UserDetails">Checkout</a></button>
        }
    </div>
</body>
</html>
